const canvas = document.getElementById("gameCanvas");
const ctx = canvas.getContext("2d");
const startBtn = document.getElementById("start-btn");
const speedSelect = document.getElementById("speed-select");
const ngDisplay = document.getElementById("ng-count");
const scoreDisplay = document.getElementById("score");

// 画像の設定（ファイルがない場合は色で描画します）
const racketImg = new Image();
racketImg.src = 'racket.png'; 
const ballImg = new Image();
ballImg.src = 'ball.png';

let score = 0;
let ngCount = 0;
let gameRunning = false;

// ラケットの設定
const paddleHeight = 15;
const paddleWidth = 100;
let paddleX = (canvas.width - paddleWidth) / 2;

// ボールの設定
let x, y, dx, dy;
const ballRadius = 10;

// キー入力フラグ
let rightPressed = false;
let leftPressed = false;

document.addEventListener("keydown", (e) => {
    if(e.key === "Right" || e.key === "ArrowRight") rightPressed = true;
    else if(e.key === "Left" || e.key === "ArrowLeft") leftPressed = true;
});
document.addEventListener("keyup", (e) => {
    if(e.key === "Right" || e.key === "ArrowRight") rightPressed = false;
    else if(e.key === "Left" || e.key === "ArrowLeft") leftPressed = false;
});

function initBall() {
    x = canvas.width / 2;
    y = 50;
    const speed = parseInt(speedSelect.value);
    dx = speed * (Math.random() > 0.5 ? 1 : -1);
    dy = speed;
}

function drawBall() {
    if (ballImg.complete && ballImg.naturalWidth !== 0) {
        ctx.drawImage(ballImg, x - ballRadius, y - ballRadius, ballRadius * 2, ballRadius * 2);
    } else {
        ctx.beginPath();
        ctx.arc(x, y, ballRadius, 0, Math.PI * 2);
        ctx.fillStyle = "#e74c3c";
        ctx.fill();
        ctx.closePath();
    }
}

function drawPaddle() {
    if (racketImg.complete && racketImg.naturalWidth !== 0) {
        ctx.drawImage(racketImg, paddleX, canvas.height - paddleHeight - 10, paddleWidth, paddleHeight);
    } else {
        ctx.beginPath();
        ctx.rect(paddleX, canvas.height - paddleHeight - 10, paddleWidth, paddleHeight);
        ctx.fillStyle = "#3498db";
        ctx.fill();
        ctx.closePath();
    }
}

function update() {
    if (!gameRunning) return;

    ctx.clearRect(0, 0, canvas.width, canvas.height);
    drawBall();
    drawPaddle();

    // 壁との衝突（左右）
    if (x + dx > canvas.width - ballRadius || x + dx < ballRadius) dx = -dx;
    // 天井との衝突
    if (y + dy < ballRadius) dy = -dy;
    
    // ラケットとの衝突判定
    if (y + dy > canvas.height - paddleHeight - 20) {
        if (x > paddleX && x < paddleX + paddleWidth) {
            dy = -dy;
            score++;
            scoreDisplay.textContent = score;
        } else if (y + dy > canvas.height) {
            // ミス（NG）
            ngCount++;
            ngDisplay.textContent = ngCount;
            if (ngCount >= 10) {
                alert("ゲームオーバー！ スコア: " + score);
                gameRunning = false;
                startBtn.disabled = false;
            } else {
                initBall();
            }
        }
    }

    // ラケットの移動
    if (rightPressed && paddleX < canvas.width - paddleWidth) paddleX += 7;
    else if (leftPressed && paddleX > 0) paddleX -= 7;

    x += dx;
    y += dy;

    if (gameRunning) requestAnimationFrame(update);
}

startBtn.addEventListener("click", () => {
    score = 0;
    ngCount = 0;
    scoreDisplay.textContent = score;
    ngDisplay.textContent = ngCount;
    startBtn.disabled = true;
    gameRunning = true;
    initBall();
    update();
});